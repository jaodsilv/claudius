{
  "description": "Hooks for cc plugin - command pre-validation for version bumping and config sync",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/cc-pre-command.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
