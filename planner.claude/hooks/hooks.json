{
  "description": "Check for optional dependencies at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}