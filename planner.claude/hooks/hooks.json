{
  "description": "Check for dependencies and provide template paths at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.sh\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
