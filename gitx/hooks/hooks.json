{
  "description": "Check for git and gh CLI dependencies at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.sh\" 2>/dev/null || powershell -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.ps1\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
