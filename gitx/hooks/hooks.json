{
  "description": "Check for git and gh CLI dependencies at session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-dependencies.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
